{
  "dashboard": {
    "title": "PLC Bottle Filler Dashboard",
    "tags": ["plc", "modbus", "influxdb"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Bottle Count",
        "type": "stat",
        "targets": [
          {
            "datasource": {
              "type": "influxdb",
              "uid": "InfluxDB"
            },
            "query": "from(bucket: \"plc_data\")\n  |> range(start: -5m)\n  |> filter(fn: (r) => r[\"_measurement\"] == \"plc_data\")\n  |> filter(fn: (r) => r[\"_field\"] == \"BottleCount\")\n  |> last()",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
